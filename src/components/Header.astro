<header class="header">
  <div class="nav-container">
    <a href="/" class="logo">sim.log</a>
    <nav class="nav">
      <a href="/about">about</a>
      <a href="/category">category</a>
    </nav>
  </div>
</header>

<style>
  .header {
    padding-top: 15px;
    padding-bottom: 5px;
    border-bottom: 1px solid;
  }

  .nav-container {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
  }

  a {
    color: black;
    text-decoration: none;
  }

  .nav {
    margin-left: auto;
    font-size: 21px;
  }

  .logo {
    font-size: 30px;
    font-weight: 600;
  }

  a:hover,
  a:active {
    animation-duration: 2s;
    animation-name: rainbowColor;
    animation-iteration-count: infinite;
  }

  /* Header 폰트 색상 애니메이션 */
  @keyframes rainbowColor {
    0% {
      color: #ff2a2a;
    }
    15% {
      color: #ff7a2a;
    }
    30% {
      color: #ffc52a;
    }
    45% {
      color: #43ff2a;
    }
    60% {
      color: #2a89ff;
    }
    75% {
      color: #202082;
    }
    90% {
      color: #6b2aff;
    }
    100% {
      color: #e82aff;
    }
  }
</style>

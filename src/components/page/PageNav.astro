---
const { posts, prev, next } = Astro.props;
---

<div class="page-nav-container">
  {
    prev !== null ? (
      <a class="left-arrow" href={`/posts/${posts[prev].slug}`}>
        <div id="rainbow" class="nav-arrow">
          {"<"}
        </div>
        <div id="rainbow" class="nav-title">
          {posts[prev].data.title}
        </div>
      </a>
    ) : (
      <div />
    )
  }
  {
    next !== null ? (
      <a class="right-arrow" href={`/posts/${posts[next].slug}`}>
        <div id="rainbow" class="nav-title">
          {posts[next].data.title}
        </div>
        <div id="rainbow" class="nav-arrow">
          {">"}
        </div>
      </a>
    ) : (
      <div />
    )
  }
</div>

<style>
  .page-nav-container {
    margin-top: 80px;
    display: flex;
    justify-content: space-between;
  }

  .left-arrow {
    text-align: left;
  }

  .right-arrow {
    text-align: right;
  }

  .nav-arrow {
    font-size: 1.2em;
    padding: 5px;
  }

  a {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .nav-title {
    padding-top: 1px;
    font-size: 1.2em;
    font-weight: bold;
  }
</style>

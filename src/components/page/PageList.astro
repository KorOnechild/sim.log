---
import { subDate } from "../../utils/utils.js";
import banner from "../../assets/banner.jpg";
import Image from "astro/components/Image.astro";

// 프로젝트 내부 전체 이미지 불러오기
const { page } = Astro.props;
---

<div class="banner" />
<!-- <Image class="banner" src={banner} alt="banner" /> -->
<div class="post-container">
  {
    page.data.map((post) => (
      <article class="post-item">
        {/* <ImageComponent post={post} imagePath={images[post.data.cover]} /> */}
        <div class="info-container">
          <a href={`/posts/${post.data.slug}`}>
            <h2 class="title" id="title">
              {post.data.title}
            </h2>
          </a>
          <div class="date-cate">
            <a>
              <div id="title" class="category">
                {post.data.category}
              </div>
            </a>
            <div class="date">{subDate(post.data.date)}</div>
          </div>
          <p class="desc">{post.data.description}</p>
        </div>
      </article>
    ))
  }
</div>
<style>
  .banner {
    width: 100%;
    height: 350px;
    background-image: url('../../assets/banner.webp');
    background-size: cover;
    background-position-y: 51%;
    margin-bottom: 30px;
  }
  .post-item {
    margin-top: 10px;
    display: flex;
    max-height: 160px;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 10px;
  }

  .info-container {
    /* margin-left: 3%; */
    flex: 1;

    * {
      overflow: hidden;
      text-overflow: ellipsis;
      margin: 0;
    }

    .title {
      font-size: x-large;
      width: fit-content;
      max-height: 1.3em;
    }

    #title {
      animation-duration: 2s;
      animation-name: rainbowColor;
      animation-iteration-count: infinite;
      animation-timing-function: linear;
    }

    .date-cate {
      display: flex;
      flex-direction: row;
      margin-top: 10px;
    }

    .category {
      font-size: 0.8em;
    }

    .date {
      color: grey;
      font-size: 0.8em;
      margin-left: 5px;
    }

    .desc {
      margin-top: 5px;
      max-height: calc(1.5em * 2);
      line-height: 1.5;
      font-size: 17px;
    }
  }
</style>
